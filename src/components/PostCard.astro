---
import { formatDate } from '../utils/helpers';

interface Props {
  title: string;
  date: Date;
  description: string;
  tags: string[];
  img?: string;
  slug: string;
}

const { title, date, description, tags, img, slug } = Astro.props;
---

<article class="post-card">
  {img && (
    <a href={`/posts/${slug}`} class="post-image">
      <img src={`/img/${img}`} alt={title} />
    </a>
  )}
  <div class="post-content">
    <h2 class="post-title">
      <a href={`/posts/${slug}`}>{title}</a>
    </h2>
    <p class="post-meta">{formatDate(date)}</p>
    <p class="post-description">{description}</p>
    <div class="post-tags">
      {tags.map((tag) => (
        <a href={`/tags/${tag.toLowerCase()}`} class="tag">#{tag}</a>
      ))}
    </div>
  </div>
</article>

<style>
  .post-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    background: var(--color-card-bg);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  .post-image {
    width: 100%;
    overflow: hidden;
    border-radius: 6px;
  }

  .post-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    transition: transform 0.2s ease;
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .post-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
  }

  .post-title a {
    color: var(--color-text);
  }

  .post-meta {
    color: var(--color-gray);
    font-size: 0.875rem;
    margin: 0;
  }

  .post-description {
    color: var(--color-gray);
    line-height: 1.6;
    margin: 0;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: var(--color-tag-bg);
    border-radius: 16px;
    font-size: 0.85rem;
    color: var(--color-gray);
    transition: background-color 0.2s ease;
  }

  .tag:hover {
    background-color: var(--color-tag-hover-bg);
    color: var(--color-text);
  }
</style>
