---
import { SITE } from '../config';
---

<header class="header">
  <div class="container">
    <h1 class="site-title">
      <a href="/">{SITE.author}</a>
    </h1>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/talks">My Talks</a>
      <a href="/tags">Tags</a>
      <a href="/about">About</a>
    </nav>
  </div>
</header>

<style>
  .header {
    border-bottom: 1px solid var(--color-border);
    padding: 1.5rem 0;
    margin-bottom: 3rem;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
  }

  .site-title a {
    color: var(--color-text);
  }

  .nav {
    display: flex;
    gap: 1.5rem;
  }

  .nav a {
    color: var(--color-gray);
    font-size: 0.95rem;
  }

  .nav a:hover {
    color: var(--color-text);
  }

  @media (max-width: 600px) {
    .container {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .nav {
      gap: 1rem;
    }
  }
</style>
