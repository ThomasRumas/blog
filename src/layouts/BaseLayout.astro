---
import { SITE } from '../config';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description = SITE.description, image } = Astro.props;
const pageTitle = title ? `${title} - ${SITE.title}` : SITE.title;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = image ? new URL(image, Astro.site) : undefined;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    {socialImage && <meta property="og:image" content={socialImage} />}
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={description} />
    {socialImage && <meta property="twitter:image" content={socialImage} />}
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-text: #000;
    --color-background: #fff;
    --color-accent: #263959;
    --color-gray: #666;
    --color-light-gray: #e5e5e5;
    --color-border: #e0e0e0;
    --color-card-bg: #fff;
    --color-inline-code-bg: #f5f5f5;
    --color-tag-bg: #f5f5f5;
    --color-tag-hover-bg: #e5e5e5;
    --font-system: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', sans-serif;
    --max-width: 680px;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --color-text: #e5e5e5;
      --color-background: #0a0a0a;
      --color-accent: #4a90e2;
      --color-gray: #999;
      --color-light-gray: #333;
      --color-border: #2a2a2a;
      --color-card-bg: #111;
      --color-inline-code-bg: #1a1a1a;
      --color-tag-bg: #1a1a1a;
      --color-tag-hover-bg: #2a2a2a;
    }
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: var(--font-system);
    font-size: 16px;
    line-height: 1.6;
  }

  body {
    background-color: var(--color-background);
    color: var(--color-text);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  a:hover {
    opacity: 0.7;
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  code {
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
    background-color: var(--color-inline-code-bg);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    color: var(--color-text);
  }

  pre {
    margin: 1.5em 0;
    padding: 1em;
    overflow-x: auto;
    border-radius: 6px;
  }

  pre code {
    background: none;
    padding: 0;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    font-weight: 600;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 2.5rem);
  }

  h2 {
    font-size: clamp(1.5rem, 4vw, 2rem);
  }

  h3 {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
  }

  p {
    margin-bottom: 1em;
  }

  ul, ol {
    margin-bottom: 1em;
    padding-left: 1.5em;
  }

  blockquote {
    margin: 1.5em 0;
    padding-left: 1em;
    border-left: 3px solid var(--color-accent);
    color: var(--color-gray);
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin: 2em 0;
    font-size: 0.9em;
    overflow-x: auto;
    display: block;
  }

  thead {
    background-color: var(--color-tag-bg);
  }

  th, td {
    padding: 0.75em 1em;
    text-align: left;
    border: 1px solid var(--color-border);
  }

  th {
    font-weight: 600;
    color: var(--color-text);
  }

  tr:hover {
    background-color: var(--color-tag-hover-bg);
  }

  @media (max-width: 768px) {
    table {
      font-size: 0.85em;
    }
    
    th, td {
      padding: 0.5em 0.75em;
    }
  }
</style>
