---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ShareButtons from '../components/ShareButtons.astro';
import { formatDate, getReadingTime } from '../utils/helpers';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
const readingTime = getReadingTime(post.body);
const postUrl = `${Astro.site}posts/${post.slug}`;
const imageUrl = post.data.img ? `/img/${post.data.img}` : undefined;
---

<BaseLayout 
  title={post.data.title} 
  description={post.data.description}
  image={imageUrl}
>
  <Header />
  <main class="container">
    <article class="post">
      {post.data.img && (
        <div class="post-hero">
          <img src={`/img/${post.data.img}`} alt={post.data.title} />
        </div>
      )}
      
      <header class="post-header">
        <h1 class="post-title">{post.data.title}</h1>
        <div class="post-meta">
          <time datetime={post.data.date.toISOString()}>
            {formatDate(post.data.date)}
          </time>
          <span class="separator">â€¢</span>
          <span>{readingTime}</span>
        </div>
      </header>

      <div class="post-content">
        <Content />
      </div>

      <div class="post-tags">
        {post.data.tags.map((tag) => (
          <a href={`/tags/${tag.toLowerCase()}`} class="tag">#{tag}</a>
        ))}
      </div>

      <ShareButtons title={post.data.title} url={postUrl} />
    </article>
  </main>
  <Footer />
</BaseLayout>

<style>
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem 3rem;
  }

  .post {
    margin-bottom: 2rem;
  }

  .post-hero {
    margin-bottom: 2rem;
    border-radius: 8px;
    overflow: hidden;
  }

  .post-hero img {
    width: 100%;
    height: auto;
    max-height: 500px;
    object-fit: cover;
  }

  .post-header {
    margin-bottom: 2rem;
  }

  .post-title {
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-gray);
    font-size: 0.9rem;
  }

  .separator {
    color: var(--color-light-gray);
  }

  .post-content {
    font-size: 1.0625rem;
    line-height: 1.7;
  }

  .post-content :global(h2) {
    margin-top: 2em;
    margin-bottom: 0.75em;
    font-size: 1.75rem;
  }

  .post-content :global(h3) {
    margin-top: 1.75em;
    margin-bottom: 0.5em;
    font-size: 1.375rem;
  }

  .post-content :global(img) {
    margin: 2rem auto;
    border-radius: 8px;
  }

  .post-content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 2rem;
  }

  .tag {
    display: inline-block;
    padding: 0.4rem 0.9rem;
    background-color: var(--color-tag-bg);
    border-radius: 16px;
    font-size: 0.9rem;
    color: var(--color-gray);
    transition: background-color 0.2s ease;
  }

  .tag:hover {
    background-color: var(--color-tag-hover-bg);
    color: var(--color-text);
  }

  @media (max-width: 600px) {
    .post-hero img {
      max-height: 300px;
    }
  }

  @media (max-width: 600px) {
    .container {
      max-width: 450px;
      padding: 0 1rem 2rem;
    }
  }
</style>
